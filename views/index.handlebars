<div class="container">
	<h1>EAT DA BURGER</h1>
	<div class="row">
		<div class="col-md-6">
			<h2>Burgers to Eat:</h2>
			<ul>
				{{#each burgers}}
				{{#unless consumed}}
				{{> burgers/burger-block consumed=true}}
				{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-md-6">
			<h2>Burgers Consumed:</h2>
			<ul>
				{{#each burgers}}
				{{#if consumed}}
				{{> burgers/burger-block consumed=false}}
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

	<h2>Add a Burger</h2>
	<form class="create-form">

		<div class="form-group">
			<label for="createBurger">Create a Burger:</label>
			<input type="text" id="createBurger" name="name">
		</div>

